---
interface Props {
    class? : string
}

const className = Astro.props.class
---
<div id="sidebar" class:list={[className, "w-full"]}>
    <div id="sidebar-sticky" class="transition-all duration-700 flex flex-col w-full gap-4 top-4 sticky">
        <div class="widget-section onload-animation" style="animation-delay: 150ms">
            <h3 class="text-lg font-semibold mb-2">Latest Reviews</h3>
            <ul class="list-disc list-inside">
                <li>Product A Review</li>
                <li>Service B Review</li>
                <li>Movie C Review</li>
            </ul>
        </div>
        <div class="widget-section onload-animation" style="animation-delay: 200ms">
            <h3 class="text-lg font-semibold mb-2">Top Rated</h3>
            <ul class="list-disc list-inside">
                <li>Top Gadget of the Year</li>
                <li>Best Restaurant 2025</li>
            </ul>
        </div>
        <div class="widget-section onload-animation" style="animation-delay: 250ms">
            <h3 class="text-lg font-semibold mb-2">Review Categories</h3>
            <ul class="list-disc list-inside">
                <li>Electronics</li>
                <li>Books</li>
                <li>Travel</li>
            </ul>
        </div>
    </div>
</div>