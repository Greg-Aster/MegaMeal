---
interface Props {
    class? : string
}

const className = Astro.props.class
---
<div id="sidebar" class:list={[className, "w-full"]}>
    <div id="sidebar-sticky" class="transition-all duration-700 flex flex-col w-full gap-4 top-4 sticky">
        <div class="widget-section onload-animation" style="animation-delay: 150ms">
            <h3 class="text-lg font-semibold mb-2">Recipe Categories</h3>
            <ul class="list-disc list-inside">
                <li>Appetizers</li>
                <li>Main Courses</li>
                <li>Desserts</li>
                <li>Drinks</li>
            </ul>
        </div>
        <div class="widget-section onload-animation" style="animation-delay: 200ms">
            <h3 class="text-lg font-semibold mb-2">Featured Recipes</h3>
            <ul class="list-disc list-inside">
                <li>Special Pasta</li>
                <li>Gourmet Burger</li>
            </ul>
        </div>
        <div class="widget-section onload-animation" style="animation-delay: 250ms">
            <h3 class="text-lg font-semibold mb-2">Cooking Tips</h3>
            <p>Remember to always preheat your oven!</p>
        </div>
    </div>
</div>