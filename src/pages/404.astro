---
import {
  Content,
  frontmatter,
} from '@/content/posts/store/store-placeholder.mdx'
import MainGridLayout from '@/layouts/MainGridLayout.astro'
import StoreLayout from '@/layouts/store/StoreLayout.astro'
import { Icon } from 'astro-icon/components'

const isStorePagination404 = Astro.url.pathname.startsWith('/store/page/')

// Get the requested path for display
const requestedPath = Astro.url.pathname
---

{isStorePagination404 ? (
  <StoreLayout title={frontmatter.title} description={frontmatter.description}>
    <Content />
  </StoreLayout>
) : (
  <MainGridLayout 
    title="404: Page Not Found" 
    description="The page you're looking for seems to have vanished into the cosmic void. Let us help you find your way back."
  >
    <!-- Main 404 Content -->
    <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative mb-4">
      <div class="card-base z-10 px-6 md:px-9 pt-8 pb-8 relative w-full text-center">
        
        <!-- 404 Icon and Header -->
        <div class="onload-animation mb-8">
          <div class="text-8xl md:text-9xl font-bold text-[var(--primary)] mb-4 leading-none">
            404
          </div>
          <div class="text-6xl mb-6">ðŸŒŒ</div>
          <h1 class="text-3xl md:text-4xl font-bold mb-4 text-black/90 dark:text-white/90">
            Lost in the MEGAMEAL Multiverse
          </h1>
          <p class="text-lg text-gray-600 dark:text-neutral-400 max-w-2xl mx-auto mb-2">
            The page you're looking for seems to have vanished into the cosmic void, possibly consumed by a rogue mascot or displaced by a temporal anomaly.
          </p>
          {requestedPath && (
            <p class="text-sm text-gray-500 dark:text-neutral-500 font-mono bg-gray-100 dark:bg-gray-800 px-3 py-1 rounded-lg inline-block mb-6">
              Requested: {requestedPath}
            </p>
          )}
        </div>

        <!-- Navigation Options -->
        <div class="onload-animation grid grid-cols-1 md:grid-cols-3 gap-4 mb-8 max-w-4xl mx-auto">
          <!-- Home Button -->
          <a 
            href="/" 
            class="card-base p-6 text-center hover:scale-105 transition-all duration-200 cursor-pointer group bg-gradient-to-br from-[oklch(0.95_0.025_240)] to-[oklch(0.90_0.05_240)] dark:from-[oklch(0.25_0.025_240)] dark:to-[oklch(0.20_0.05_240)] border-2 border-transparent hover:border-[oklch(0.6_0.2_240)] active:scale-95"
          >
            <Icon name="material-symbols:home" class="text-4xl mb-3 text-[oklch(0.6_0.2_240)] mx-auto" />
            <h3 class="font-bold text-lg mb-2 text-gray-800 dark:text-neutral-200 group-hover:text-[oklch(0.4_0.2_240)]">Home Base</h3>
            <p class="text-sm text-gray-600 dark:text-neutral-400">Return to the main universe</p>
          </a>

          <!-- Timeline Button -->
          <a 
            href="/posts/timeline/" 
            class="card-base p-6 text-center hover:scale-105 transition-all duration-200 cursor-pointer group bg-gradient-to-br from-[oklch(0.95_0.025_120)] to-[oklch(0.90_0.05_120)] dark:from-[oklch(0.25_0.025_120)] dark:to-[oklch(0.20_0.05_120)] border-2 border-transparent hover:border-[oklch(0.6_0.2_120)] active:scale-95"
          >
            <Icon name="material-symbols:schedule" class="text-4xl mb-3 text-[oklch(0.6_0.2_120)] mx-auto" />
            <h3 class="font-bold text-lg mb-2 text-gray-800 dark:text-neutral-200 group-hover:text-[oklch(0.4_0.2_120)]">Cosmic Timeline</h3>
            <p class="text-sm text-gray-600 dark:text-neutral-400">Navigate the multiverse</p>
          </a>

          <!-- About Button -->
          <a 
            href="/about/" 
            class="card-base p-6 text-center hover:scale-105 transition-all duration-200 cursor-pointer group bg-gradient-to-br from-[oklch(0.95_0.025_360)] to-[oklch(0.90_0.05_360)] dark:from-[oklch(0.25_0.025_360)] dark:to-[oklch(0.20_0.05_360)] border-2 border-transparent hover:border-[oklch(0.6_0.2_360)] active:scale-95"
          >
            <Icon name="material-symbols:info" class="text-4xl mb-3 text-[oklch(0.6_0.2_360)] mx-auto" />
            <h3 class="font-bold text-lg mb-2 text-gray-800 dark:text-neutral-200 group-hover:text-[oklch(0.4_0.2_360)]">About Universe</h3>
            <p class="text-sm text-gray-600 dark:text-neutral-400">Learn about our reality</p>
          </a>
        </div>

        <!-- Additional Options -->
        <div class="onload-animation grid grid-cols-1 md:grid-cols-2 gap-4 mb-8 max-w-2xl mx-auto">
          <!-- Search/Browse -->
          <div class="card-base p-4 bg-gray-50 dark:bg-gray-800/50">
            <Icon name="material-symbols:search" class="text-2xl mb-2 text-gray-600 dark:text-neutral-400 mx-auto" />
            <h4 class="font-semibold mb-2 text-gray-800 dark:text-neutral-200">Lost Something?</h4>
            <p class="text-sm text-gray-600 dark:text-neutral-400 mb-3">Try browsing our content categories or use your browser's search function.</p>
            <div class="flex gap-2 justify-center">
              <a href="/posts/cookbook/cookbook-index/" class="text-xs bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-300 px-2 py-1 rounded hover:bg-green-200 dark:hover:bg-green-900/50 transition">Recipes</a>
              <a href="/posts/timeline/" class="text-xs bg-purple-100 dark:bg-purple-900/30 text-purple-700 dark:text-purple-300 px-2 py-1 rounded hover:bg-purple-200 dark:hover:bg-purple-900/50 transition">Timeline</a>
            </div>
          </div>

          <!-- Report Issue -->
          <div class="card-base p-4 bg-gray-50 dark:bg-gray-800/50">
            <Icon name="material-symbols:bug-report" class="text-2xl mb-2 text-gray-600 dark:text-neutral-400 mx-auto" />
            <h4 class="font-semibold mb-2 text-gray-800 dark:text-neutral-200">Found a Bug?</h4>
            <p class="text-sm text-gray-600 dark:text-neutral-400 mb-3">If you think this page should exist, let us know!</p>
            <a 
              href="mailto:greg@dndiy.org?subject=404 Error Report&body=I found a broken link at: {requestedPath}" 
              class="text-xs bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-300 px-3 py-1 rounded hover:bg-red-200 dark:hover:bg-red-900/50 transition inline-flex items-center gap-1"
            >
              <Icon name="material-symbols:mail" class="text-xs" />
              Report Issue
            </a>
          </div>
        </div>

        <!-- MEGAMEAL Universe Quote -->
        <div class="onload-animation">
          <div class="bg-gradient-to-r from-purple-100 to-blue-100 dark:from-purple-900/20 dark:to-blue-900/20 border border-purple-200 dark:border-purple-700 rounded-xl p-6 max-w-2xl mx-auto">
            <Icon name="material-symbols:format-quote" class="text-3xl text-purple-600 dark:text-purple-400 mb-2 mx-auto" />
            <blockquote class="text-lg italic text-purple-800 dark:text-purple-200 mb-3">
              "In the MEGAMEAL Universe, every ending is just another beginning's appetizer."
            </blockquote>
            <cite class="text-sm text-purple-600 dark:text-purple-400">
              â€” Merkin Lord of Love and Light
            </cite>
          </div>
        </div>

        <!-- Back Button -->
        <div class="onload-animation mt-8">
          <button 
            onclick="history.back()" 
            class="btn-card rounded-xl px-6 py-3 font-medium active:scale-95 inline-flex items-center gap-2 bg-gray-100 dark:bg-gray-800 hover:bg-gray-200 dark:hover:bg-gray-700 transition"
          >
            <Icon name="material-symbols:arrow-back" class="text-lg" />
            Go Back
          </button>
        </div>
      </div>
    </div>

    <!-- Fun Easter Egg Section -->
    <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative mb-4">
      <div class="card-base z-10 px-6 md:px-9 pt-6 pb-6 relative w-full">
        <div class="text-center">
          <h2 class="text-xl font-bold mb-4 text-black/90 dark:text-white/90">ðŸŽ¯ Fun Fact</h2>
          <p class="text-gray-600 dark:text-neutral-400 max-w-2xl mx-auto text-sm">
            Did you know? In the MEGAMEAL Universe, 404 errors are actually caused by temporal mascots eating web pages. 
            The Snuggloids are particularly fond of missing content. Don't worry though - they usually leave breadcrumbs.
          </p>
        </div>
      </div>
    </div>
  </MainGridLayout>
)}

<style>
  /* Smooth loading animations */
  .onload-animation {
    animation: fadeInUp 0.6s ease-out forwards;
  }
  
  .onload-animation:nth-child(2) {
    animation-delay: 0.1s;
  }
  
  .onload-animation:nth-child(3) {
    animation-delay: 0.2s;
  }
  
  .onload-animation:nth-child(4) {
    animation-delay: 0.3s;
  }
  
  .onload-animation:nth-child(5) {
    animation-delay: 0.4s;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Hover effects for cards */
  .card-base:hover {
    transform: translateY(-2px);
  }
</style>

<script>
  // Add some interactive behavior
  document.addEventListener('DOMContentLoaded', () => {
    // Log the 404 for debugging (if needed)
    console.log('404 Error:', window.location.pathname);
    
