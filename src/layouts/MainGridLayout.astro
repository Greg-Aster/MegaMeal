<script>
  // Import banner animation utility and configuration
  import { createBannerAnimation } from '@/utils/bannerAnimation';
  import { 
    getBannerAnimationSettings,
    getBannerLink,
    getLinkPreviewData,
    getIconSVG,
    bannerConfig
  } from '../config/banner.config';

  // Initialize everything when DOM is ready
  document.addEventListener('DOMContentLoaded', () => {
    initializePageAnimations();
    initializeBannerAnimation();
    initializeParallaxEffect();
    initializeEventListeners();
  });

  /**
   * Initialize page load animations
   */
  function initializePageAnimations() {
    updateNavbarHeight();
    
    const elements = document.querySelectorAll('.onload-animation');
    elements.forEach((element, index) => {
      setTimeout(() => {
        element.classList.add('loaded');
      }, 100 + (index * 50));
    });
    
    // Show post image if present
    const postImage = document.getElementById('post-image');
    if (postImage) {
      setTimeout(() => {
        postImage.classList.remove('opacity-0', 'scale-105');
      }, 100);
    }
  }

  /**
   * Initialize banner animation using the centralized utility
   * Much cleaner - all logic is now in the banner system!
   */
  function initializeBannerAnimation() {
    // Create banner animation with configuration
    const bannerController = createBannerAnimation({
      containerId: 'standard-banner-container',
      animationConfig: getBannerAnimationSettings(),
      getBannerLink: getBannerLink,
      getLinkPreviewData: getLinkPreviewData,
      getIconSVG: getIconSVG,
      isVideoBannerItem: bannerConfig.standardBannerConfig.isVideoBannerItem,
      isImageBannerItem: bannerConfig.standardBannerConfig.isImageBannerItem
    });

    // Initialize the animation system
    const initialized = bannerController.initialize();
    
    if (initialized) {
      console.log('Banner animation system initialized successfully');
    } else {
      console.log('Banner animation system initialization skipped (not applicable)');
    }
  }

  /**
   * Efficient parallax effect
   * Configuration from banner.config.ts
   */
  function initializeParallaxEffect() {
    const parallaxBanner = document.getElementById('parallax-banner');
    if (!parallaxBanner) return;
    
    const parallaxImage = document.getElementById('parallax-image');
    if (!parallaxImage) return;
    
    const scrollFactor = bannerConfig.parallax.scrollFactor;
    let ticking = false;

    function updateParallax() {
      const scrollY = window.scrollY;
      const offset = scrollY * scrollFactor;
      
      parallaxImage.style.transform = `translate3d(0, ${offset}px, 0)`;
      ticking = false;
    }

    window.addEventListener('scroll', () => {
      if (!ticking) {
        requestAnimationFrame(updateParallax);
        ticking = true;
      }
    });

    // Fade in parallax banner after initial setup
    window.addEventListener('load', () => {
      setTimeout(() => {
        parallaxBanner.classList.add('loaded');
      }, 100);
    });
  }

  /**
   * Update navbar height CSS variable
   */
  function updateNavbarHeight() {
    const navbar = document.getElementById('navbar-wrapper');
    if (navbar) {
      const navbarHeight = navbar.offsetHeight;
      document.documentElement.style.setProperty('--navbar-height', `${navbarHeight}px`);
    }
  }

  /**
   * Initialize event listeners
   */
  function initializeEventListeners() {
    // TOC visibility on scroll
    window.addEventListener('scroll', () => {
      const scrollY = window.scrollY;
      const tocWrapper = document.querySelector('#toc-wrapper');
      if (tocWrapper) {
        if (scrollY > 300) {
          tocWrapper.classList.remove('toc-hide');
        } else {
          tocWrapper.classList.add('toc-hide');
        }
      }
    });
    
    // Handle resize events
    window.addEventListener('resize', () => {
      updateNavbarHeight();
    });

    // Apply background opacity from config if available
    if (window.siteConfig && window.siteConfig.transparency) {
      document.documentElement.style.setProperty('--bg-opacity', window.siteConfig.transparency);
    }
  }

  // Preserve global banner animation interface for TypeScript
  declare global {
    interface Window {
      bannerAnimation?: {
        start: () => void;
        stop: () => void;
        next: () => void;
        pause: (reason?: string) => void;
        resume: (reason?: string) => void;
        isPaused: () => boolean;
        getCurrentIndex: () => number;
        getCurrentLink: () => string | null;
        selectBanner: (index: number) => void;
        deselectBanner: () => void;
      };
    }
  }

  /**
 * Initialize fullscreen mode toggle
 */
function initializeFullscreenMode() {
  const toggleBtn = document.getElementById('fullscreen-btn');
  const expandIcon = toggleBtn?.querySelector('.fullscreen-icon');
  const compressIcon = toggleBtn?.querySelector('.fullscreen-exit-icon');
  
  // Check saved state and apply it WITHOUT triggering reload
  const isFullscreen = localStorage.getItem('fullscreenMode') === 'true';
  
  // Apply initial state (without reload - just visual state)
  if (isFullscreen) {
    applyFullscreenState();
  } else {
    applyNormalState();
  }
  
  // Toggle handler
  toggleBtn?.addEventListener('click', () => {
    const currentState = document.body.classList.contains('force-mobile-view');
    
    if (currentState) {
      disableFullscreenMode();
    } else {
      enableFullscreenMode();
    }
  });
  
  /**
   * Apply fullscreen visual state without reload
   */
  function applyFullscreenState() {
    // Add class to force mobile view
    document.body.classList.add('force-mobile-view');
    
    // Update button icons
    expandIcon?.classList.add('hidden');
    compressIcon?.classList.remove('hidden');
  }
  
  /**
   * Apply normal visual state without reload
   */
  function applyNormalState() {
    // Remove class
    document.body.classList.remove('force-mobile-view');
    
    // Update button icons
    expandIcon?.classList.remove('hidden');
    compressIcon?.classList.add('hidden');
  }
  
  /**
   * Enable fullscreen mode and reload to apply banner changes
   */
  function enableFullscreenMode() {
    // Save state first
    localStorage.setItem('fullscreenMode', 'true');
    localStorage.setItem('fullscreenBannerOverride', 'true');
    
    // Apply visual state immediately
    applyFullscreenState();
    
    // Reload to apply banner changes
    if (!document.body.classList.contains('fullscreen-transitioning')) {
      document.body.classList.add('fullscreen-transitioning');
      setTimeout(() => {
        window.location.reload();
      }, 300);
    }
  }
  
  /**
   * Disable fullscreen mode and reload to restore banner
   */
  function disableFullscreenMode() {
    // Save state first
    localStorage.setItem('fullscreenMode', 'false');
    localStorage.removeItem('fullscreenBannerOverride');
    
    // Apply visual state immediately
    applyNormalState();
    
    // Reload to restore banner
    if (!document.body.classList.contains('fullscreen-transitioning')) {
      document.body.classList.add('fullscreen-transitioning');
      setTimeout(() => {
        window.location.reload();
      }, 300);
    }
  }
}

  // Add to DOMContentLoaded
  document.addEventListener('DOMContentLoaded', () => {
    initializePageAnimations();
    initializeBannerAnimation();
    initializeParallaxEffect();
    initializeEventListeners();
    initializeFullscreenMode(); // Add this line
  });
</script>