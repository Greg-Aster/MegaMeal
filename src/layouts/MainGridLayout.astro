    isPaused: () => boolean;
    getTotalSlides: () => number;
    isManuallyNavigating: () => boolean;
    isVideoSlide: (index: number) => boolean;
    getVideoLoadingState: (index: number) => VideoLoadingState;
    getVideoStats: () => {
      totalVideos: number;
      loadedCount: number;
      loadingCount: number;
      errorCount: number;
      unloadedCount: number;
