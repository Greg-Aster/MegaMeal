<script>
  // Import banner animation utility and configuration
  import { createBannerAnimation } from '@/utils/bannerAnimation';
  import { 
    getBannerAnimationSettings,
    getBannerLink,
    getLinkPreviewData,
    getIconSVG,
    bannerConfig
  } from '../config/banner.config';

  // Initialize everything when DOM is ready
  document.addEventListener('DOMContentLoaded', () => {
    initializePageAnimations();
    initializeBannerAnimation();
    initializeParallaxEffect();
    initializeEventListeners();
    initializeBannerInteractions();
    initializeBannerHiding();
  });

  /**
   * Initialize page load animations
   */
  function initializePageAnimations() {
    updateNavbarHeight();
    
    const elements = document.querySelectorAll('.onload-animation');
    elements.forEach((element, index) => {
      setTimeout(() => {
        element.classList.add('loaded');
      }, 100 + (index * 50));
    });
    
    // Show post image if present
    const postImage = document.getElementById('post-image');
    if (postImage) {
      setTimeout(() => {
        postImage.classList.remove('opacity-0', 'scale-105');
      }, 100);
    }
  }

  /**
   * Initialize banner animation using the centralized utility
   * DISABLED for click-to-preview system - will be re-enabled with updated logic
   */
  function initializeBannerAnimation() {
    // TEMPORARILY DISABLED - The existing banner animation system interferes with click-to-preview
    // We need to either update the createBannerAnimation utility or create a new one
    // that supports click-to-preview instead of hover-to-preview
    
    // For now, we'll handle banner cycling manually if needed
    console.log('Banner animation system disabled for click-to-preview implementation');
    
    // Basic banner cycling without the complex preview system
    const container = document.getElementById('standard-banner-container');
    if (container) {
      const slides = container.querySelectorAll('.banner-slide');
      if (slides.length > 1) {
        let currentIndex = 0;
        
        // Simple rotation every 5 seconds
        setInterval(() => {
          slides[currentIndex].style.opacity = '0';
          currentIndex = (currentIndex + 1) % slides.length;
          slides[currentIndex].style.opacity = '1';
        }, 5000);
      }
    }
  }

  /**
   * Efficient parallax effect
   * Configuration from banner.config.ts
   */
  function initializeParallaxEffect() {
    const parallaxBanner = document.getElementById('parallax-banner');
    if (!parallaxBanner) return;
    
    const parallaxImage = document.getElementById('parallax-image');
    if (!parallaxImage) return;
    
    const scrollFactor = bannerConfig.parallax.scrollFactor;
    let ticking = false;

    function updateParallax() {
      const scrollY = window.scrollY;
      const offset = scrollY * scrollFactor;
      
      parallaxImage.style.transform = `translate3d(0, ${offset}px, 0)`;
      ticking = false;
    }

    window.addEventListener('scroll', () => {
      if (!ticking) {
        requestAnimationFrame(updateParallax);
        ticking = true;
      }
    });

    // Fade in parallax banner after initial setup
    window.addEventListener('load', () => {
      setTimeout(() => {
        parallaxBanner.classList.add('loaded');
      }, 100);
    });
  }

  /**
   * Initialize new click-to-preview banner interactions
   * Replaces hover-based interactions with click-based for mobile-friendly UX
   */
  function initializeBannerInteractions() {
    console.log('Initializing banner interactions...');
    
    // Find all clickable banner areas
    const clickableAreas = document.querySelectorAll('.banner-clickable-area');
    console.log('Found clickable areas:', clickableAreas.length);
    
    // Track current banner index for navigation
    let currentBannerIndex = 0;
    const bannerSlides = document.querySelectorAll('.banner-slide');
    
    clickableAreas.forEach((area, index) => {
      const previewOverlay = area.querySelector('.banner-postcard-preview');
      const bannerSlide = area.closest('.banner-slide');
      
      console.log(`Area ${index}:`, { area, previewOverlay, bannerSlide });
      
      if (!previewOverlay) {
        console.log(`No preview overlay found for area ${index}`);
        return;
      }
      
      // Remove any existing event listeners to prevent duplicates
      area.removeEventListener('click', handleBannerClick);
      
      // Click handler for banner area (not the preview card itself)
      function handleBannerClick(e) {
        console.log('Banner clicked:', { target: e.target, area, previewOverlay });
        
        // Don't trigger if clicking on the preview card link or navigation controls
        if (e.target.closest('.banner-preview-card') || 
            e.target.closest('.banner-nav-btn') ||
            e.target.closest('.banner-position-dot')) {
          console.log('Navigation element clicked, handling separately');
          return; // Allow the navigation or link to work
        }
        
        console.log('Preventing default and showing preview');
        e.preventDefault();
        e.stopPropagation();
        
        // Toggle preview visibility
        const isActive = bannerSlide?.classList.contains('banner-preview-active');
        console.log('Is currently active:', isActive);
        
        // Hide all other active previews
        document.querySelectorAll('.banner-slide.banner-preview-active').forEach(slide => {
          slide.classList.remove('banner-preview-active');
        });
        
        // Toggle current preview
        if (!isActive && bannerSlide) {
          bannerSlide.classList.add('banner-preview-active');
          bannerSlide.classList.add('banner-paused'); // Show pause indicator
          console.log('Added banner-preview-active and banner-paused classes');
          
          // Auto-close after 10 seconds
          setTimeout(() => {
            if (bannerSlide.classList.contains('banner-preview-active')) {
              bannerSlide.classList.remove('banner-preview-active');
              bannerSlide.classList.remove('banner-paused');
            }
          }, 10000);
        }
      }
      
      area.addEventListener('click', handleBannerClick);
      
      // Handle navigation controls within this banner
      const navButtons = area.querySelectorAll('.banner-nav-btn');
      navButtons.forEach((btn, btnIndex) => {
        btn.addEventListener('click', (e) => {
          e.preventDefault();
          e.stopPropagation();
          
          console.log('Navigation button clicked:', btnIndex);
          
          // Find current slide index
          const currentSlideIndex = parseInt(bannerSlide.dataset.bannerIndex);
          let newIndex;
          
          if (btnIndex === 0) { // Previous
            newIndex = currentSlideIndex > 0 ? currentSlideIndex - 1 : bannerSlides.length - 1;
          } else { // Next
            newIndex = currentSlideIndex < bannerSlides.length - 1 ? currentSlideIndex + 1 : 0;
          }
          
          // Switch to new banner
          switchToBanner(newIndex);
        });
      });
      
      // Handle position indicators
      const positionDots = area.querySelectorAll('.banner-position-dot');
      positionDots.forEach((dot, dotIndex) => {
        dot.addEventListener('click', (e) => {
          e.preventDefault();
          e.stopPropagation();
          
          console.log('Position dot clicked:', dotIndex);
          switchToBanner(dotIndex);
        });
      });
    });

    // Function to switch banners
    function switchToBanner(newIndex) {
      console.log('Switching to banner:', newIndex);
      
      // Hide all banners
      bannerSlides.forEach((slide, index) => {
        slide.style.opacity = index === newIndex ? '1' : '0';
        slide.classList.remove('banner-preview-active', 'banner-paused');
        
        // Update position indicators
        const dots = slide.querySelectorAll('.banner-position-dot');
        dots.forEach((dot, dotIndex) => {
          if (dotIndex === newIndex) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
      });
      
      currentBannerIndex = newIndex;
    }

    // Click outside to close previews
    document.addEventListener('click', (e) => {
      if (!e.target.closest('.banner-clickable-area') && !e.target.closest('.banner-preview-card')) {
        document.querySelectorAll('.banner-slide.banner-preview-active').forEach(slide => {
          slide.classList.remove('banner-preview-active');
          slide.classList.remove('banner-paused');
        });
      }
    });

    // Escape key to close previews
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        document.querySelectorAll('.banner-slide.banner-preview-active').forEach(slide => {
          slide.classList.remove('banner-preview-active');
          slide.classList.remove('banner-paused');
        });
      }
    });
  }

  /**
   * Initialize banner hiding functionality
   * Now properly sets banner type to "none" with correct spacing
   */
  function initializeBannerHiding() {
    const hideButton = document.getElementById('banner-hide-btn');
    if (!hideButton) {
      console.log('Banner hide button not found');
      return;
    }
    
    console.log('Banner hide button found, adding click handler');
    
    hideButton.addEventListener('click', (e) => {
      e.preventDefault();
      e.stopPropagation();
      
      console.log('Hide button clicked');
      
      try {
        // Set localStorage flag to hide banner
        localStorage.setItem('fullscreenBannerOverride', 'true');
        console.log('localStorage set to true');
        
        // Show success feedback
        hideButton.innerHTML = '<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/></svg>';
        hideButton.disabled = true;
        
        // Apply "none" banner type styling immediately
        const bannerContainer = document.getElementById('banner-container');
        if (bannerContainer) {
          bannerContainer.style.display = 'none';
        }
        
        // Adjust main panel positioning to match "none" banner type
        const mainPanelWrapper = document.getElementById('main-panel-wrapper');
        if (mainPanelWrapper) {
          mainPanelWrapper.style.top = '-0rem'; // Same as panel.top.none
        }
        
        const mainGrid = document.getElementById('main-grid');
        if (mainGrid) {
          mainGrid.style.marginTop = '1.5rem'; // Proper spacing for no banner
        }
        
        // Reload after showing success feedback
        setTimeout(() => {
          window.location.reload();
        }, 1000);
        
      } catch (error) {
        console.error('Error hiding banner:', error);
        hideButton.innerHTML = 'âŒ';
        setTimeout(() => {
          hideButton.innerHTML = '<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 7c.55 0 1 .45 1 1v4c0 .55-.45 1-1 1s-1-.45-1-1V8c0-.55.45-1 1-1zm-.01-5C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z"/><path d="M0 0h24v24H0z" fill="none"/><circle cx="12" cy="17" r="1"/></svg>';
        }, 2000);
      }
    });
  }

  /**
   * Update navbar height CSS variable
   */
  function updateNavbarHeight() {
    const navbar = document.getElementById('navbar-wrapper');
    if (navbar) {
      const navbarHeight = navbar.offsetHeight;
      document.documentElement.style.setProperty('--navbar-height', `${navbarHeight}px`);
    }
  }

  /**
   * Initialize event listeners
   */
  function initializeEventListeners() {
    // TOC visibility on scroll
    window.addEventListener('scroll', () => {
      const scrollY = window.scrollY;
      const tocWrapper = document.querySelector('#toc-wrapper');
      if (tocWrapper) {
        if (scrollY > 300) {
          tocWrapper.classList.remove('toc-hide');
        } else {
          tocWrapper.classList.add('toc-hide');
        }
      }
    });
    
    // Handle resize events
    window.addEventListener('resize', () => {
      updateNavbarHeight();
    });

    // Apply background opacity from config if available
    if (window.siteConfig && window.siteConfig.transparency) {
      document.documentElement.style.setProperty('--bg-opacity', window.siteConfig.transparency);
    }
  }

  // Preserve global banner animation interface for TypeScript
  declare global {
    interface Window {
      bannerAnimation?: {
        start: () => void;
        stop: () => void;
        next: () => void;
        pause: (reason?: string) => void;
        resume: (reason?: string) => void;
        isPaused: () => boolean;
        getCurrentIndex: () => number;
        getCurrentLink: () => string | null;
        selectBanner: (index: number) => void;
        deselectBanner: () => void;
      };
    }
  }

  // Add to DOMContentLoaded
  document.addEventListener('DOMContentLoaded', () => {
    initializePageAnimations();
    initializeBannerAnimation();
    initializeParallaxEffect();
    initializeEventListeners();
    initializeBannerInteractions();
    initializeBannerHiding();
  });
</script>